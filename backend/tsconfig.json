{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "types": ["vite/client", "bun"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./src",
    "paths": {
      "@connection/*": ["connection/*"],
      "@routes/*": ["routes/*"],
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@contexts/*": ["contexts/*"],
      "@assets/*": ["assets/*"],
      "@middleware/*": ["middleware/*"],
    }
  },
}